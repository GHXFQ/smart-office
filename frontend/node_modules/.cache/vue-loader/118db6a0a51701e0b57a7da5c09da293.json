.\"\r\n              clearable\r\n              @clear=\"fetchContracts\"\r\n              @input=\"handleSearch\"\r\n            >\r\n              <template #append>\r\n                <el-button :icon=\"Search\" />\r\n              </template>\r\n            </el-input>\r\n          </div>\r\n        </div>\r\n      </template>\r\n      <div class=\"table-container\">\r\n        <el-table :data=\"contracts\" v-loading=\"loading\" style=\"width: 100%\">\r\n          <el-table-column type=\"index\" label=\"序号\" width=\"60\" />\r\n          <el-table-column prop=\"title\" label=\"合同标题\" min-width=\"200\" sortable />\r\n          <el-table-column prop=\"number\" label=\"合同编号\" width=\"180\" sortable />\r\n          <el-table-column prop=\"type\" label=\"合同类型\" width=\"120\" sortable />\r\n          <el-table-column prop=\"company_name\" label=\"所属公司\" width=\"180\" sortable />\r\n          <el-table-column prop=\"creator_name\" label=\"创建人\" width=\"120\" sortable />\r\n          <el-table-column prop=\"amount\" label=\"合同金额\" width=\"150\" sortable>\r\n            <template #default=\"scope\">\r\n              <span>¥ {{ formatAmount(scope.row.amount) }}</span>\r\n            </template>\r\n          </el-table-column>\r\n          <el-table-column label=\"操作\" width=\"150\" fixed=\"right\">\r\n            <template #default=\"scope\">\r\n              <el-button size=\"small\" type=\"primary\" text @click=\"handleView(scope.row)\">查看</el-button>\r\n              <el-button size=\"small\" type=\"danger\" text @click=\"handleDelete(scope.row)\">删除</el-button>\r\n            </template>\r\n          </el-table-column>\r\n        </el-table>\r\n      </div>\r\n      <div class=\"pagination-container\">\r\n        <el-pagination\r\n          v-model:current-page=\"pagination.page\"\r\n          v-model:page-size=\"pagination.pageSize\"\r\n          :page-sizes=\"[10, 20, 50, 100]\"\r\n          layout=\"total, sizes, prev, pager, next, jumper\"\r\n          :total=\"total\"\r\n          @size-change=\"handleSizeChange\"\r\n          @current-change=\"handleCurrentChange\"\r\n        />\r\n      </div>\r\n    </el-card>\r\n\r\n    <!-- 合同详情弹窗 -->\r\n    <el-dialog v-model=\"dialogVisible\" title=\"合同详情\" width=\"60%\">\r\n      <div v-if=\"selectedContract\" class=\"detail-dialog-content\">\r\n        <el-descriptions :column=\"2\" border>\r\n          <el-descriptions-item label=\"合同名称\">{{ selectedContract.title }}</el-descriptions-item>\r\n          <el-descriptions-item label=\"签约对方\">{{ selectedContract.company }}</el-descriptions-item>\r\n          <el-descriptions-item label=\"合同编号\">{{ selectedContract.number }}</el-descriptions-item>\r\n          <el-descriptions-item label=\"签约日期\">{{ formatDate(selectedContract.sign_date) }}</el-descriptions-item>\r\n          <el-descriptions-item label=\"合同类型\">{{ selectedContract.type }}</el-descriptions-item>\r\n          <el-descriptions-item label=\"生效日期\">{{ formatDate(selectedContract.start_date) }}</el-descriptions-item>\r\n          <el-descriptions-item label=\"合同金额\">\r\n            <el-tag type=\"success\">¥ {{ formatAmount(selectedContract.amount) }}</el-tag>\r\n          </el-descriptions-item>\r\n          <el-descriptions-item label=\"到期日期\">{{ formatDate(selectedContract.expire_date) }}</el-descriptions-item>\r\n        </el-descriptions>\r\n        \r\n        <el-divider content-position=\"left\">合同正文</el-divider>\r\n        <div class=\"contract-content-preview\" v-html=\"selectedContract.content\"></div>\r\n\r\n      </div>\r\n      <template #footer>\r\n        <span class=\"dialog-footer\">\r\n          <el-button @click=\"dialogVisible = false\">关闭</el-button>\r\n        </span>\r\n      </template>\r\n    </el-dialog>\r\n\r\n  </div>\r\n</template>\r\n\r\n<script setup>\r\nimport { ref, reactive, onMounted } from 'vue';\r\nimport adminApi from '@/api/admin';\r\nimport { ElMessage, ElMessageBox } from 'element-plus';\r\nimport { Document, Search } from '@element-plus/icons-vue';\r\n\r\nconst contracts = ref([]);\r\nconst loading = ref(true);\r\nconst total = ref(0);\r\nconst searchQuery = ref('');\r\nconst dialogVisible = ref(false);\r\nconst selectedContract = ref(null);\r\nlet searchTimeout = null;\r\n\r\nconst pagination = reactive({\r\n  page: 1,\r\n  pageSize: 10,\r\n});\r\n\r\nconst fetchContracts = async () => {\r\n  loading.value = true;\r\n  try {\r\n    const params = {\r\n      page: pagination.page,\r\n      page_size: pagination.pageSize,\r\n      search: searchQuery.value,\r\n    };\r\n    const res = await adminApi.getContracts(params);\r\n    if (res.data && res.data.results) {\r\n      contracts.value = res.data.results;\r\n      total.value = res.data.count;\r\n    } else {\r\n      ElMessage.error('获取合同列表失败');\r\n    }\r\n  } catch (error) {\r\n    console.error('Error fetching contracts:', error);\r\n    ElMessage.error('加载合同数据时出错，请稍后重试');\r\n  } finally {\r\n    loading.value = false;\r\n  }\r\n};\r\n\r\nconst handleView = async (row) => {\r\n  try {\r\n    const res = await adminApi.getContractDetail(row.id);\r\n    selectedContract.value = res.data;\r\n    dialogVisible.value = true;\r\n  } catch (error) {\r\n    ElMessage.error('获取合同详情失败');\r\n    console.error(error);\r\n  }\r\n};\r\n\r\nconst handleDelete = (row) => {\r\n  ElMessageBox.confirm(\r\n    `确定要删除合同【${row.title}】吗？此操作不可恢复。`,\r\n    '警告',\r\n    {\r\n      confirmButtonText: '确定删除',\r\n      cancelButtonText: '取消',\r\n      type: 'warning',\r\n    }\r\n  ).then(async () => {\r\n    try {\r\n      await adminApi.deleteContract(row.id);\r\n      ElMessage.success('合同删除成功');\r\n      fetchContracts(); // 重新加载列表\r\n    } catch (error) {\r\n      ElMessage.error('删除失败');\r\n      console.error(error);\r\n    }\r\n  }).catch(() => {\r\n    ElMessage.info('已取消删除');\r\n  });\r\n};\r\n\r\nconst handleSearch = () => {\r\n  if (searchTimeout) {\r\n    clearTimeout(searchTimeout);\r\n  }\r\n  searchTimeout = setTimeout(() => {\r\n    pagination.page = 1;\r\n    fetchContracts();\r\n  }, 300); // 300ms防抖\r\n};\r\n\r\nconst handleSizeChange = (val) => {\r\n  pagination.pageSize = val;\r\n  fetchContracts();\r\n};\r\n\r\nconst handleCurrentChange = (val) => {\r\n  pagination.page = val;\r\n  fetchContracts();\r\n};\r\n\r\nconst formatDate = (dateStr) => {\r\n  if (!dateStr) return '无';\r\n  const date = new Date(dateStr);\r\n  return date.toLocaleDateString('zh-CN');\r\n};\r\n\r\nconst formatAmount = (amount) => {\r\n  if (amount === null || amount === undefined) return '0.00';\r\n  return parseFloat(amount).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });\r\n};\r\n\r\nonMounted(() => {\r\n  fetchContracts();\r\n});\r\n</script>\r\n\r\n<style scoped lang=\"scss\">\r\n@import './shared-styles.css';\r\n\r\n.contract-management-container {\r\n  padding: 20px;\r\n}\r\n\r\n.card-header {\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: space-between;\r\n  font-weight: 500;\r\n  \r\n  .header-icon {\r\n    margin-right: 10px;\r\n  }\r\n\r\n  .search-bar {\r\n    width: 350px;\r\n  }\r\n}\r\n\r\n.table-container {\r\n  margin-top: 15px;\r\n}\r\n\r\n.pagination-container {\r\n  display: flex;\r\n  justify-content: flex-end;\r\n  margin-top: 20px;\r\n}\r\n\r\n.detail-dialog-content .el-descriptions {\r\n  margin-top: 10px;\r\n}\r\n\r\n.contract-content-preview {\r\n  margin-top: 20px;\r\n  padding: 15px;\r\n  border: 1px solid #e9ecef;\r\n  border-radius: 4px;\r\n  background-color: #f8f9fa;\r\n  max-height: 50vh;\r\n  overflow-y: auto;\r\n  line-height: 1.7;\r\n}\r\n\r\n.contract-content-preview :deep(p) {\r\n  margin-bottom: 1em;\r\n}\r\n\r\n.contract-content-preview :deep(h1),\r\n.contract-content-preview :deep(h2),\r\n.contract-content-preview :deep(h3) {\r\n  margin-top: 1.5em;\r\n  margin-bottom: 1em;\r\n  font-weight: 600;\r\n}\r\n</style> "]}]}