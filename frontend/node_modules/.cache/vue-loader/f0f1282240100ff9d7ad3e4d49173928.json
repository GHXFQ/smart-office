     return colorMap[type] || '#909399'\r\n    }\r\n    \r\n    // 创建客户\r\n    const createCustomer = () => {\r\n      ElMessage.success('新增客户')\r\n    }\r\n    \r\n    // 编辑客户\r\n    const editCustomer = () => {\r\n      ElMessage.success(`编辑客户: ${customers.value[selectedCustomer.value].name}`)\r\n    }\r\n    \r\n    // 删除客户\r\n    const deleteCustomer = () => {\r\n      ElMessageBox.confirm(\r\n        `确定要删除客户\"${customers.value[selectedCustomer.value].name}\"吗？`,\r\n        '提示',\r\n        {\r\n          confirmButtonText: '确定',\r\n          cancelButtonText: '取消',\r\n          type: 'warning'\r\n        }\r\n      ).then(() => {\r\n        ElMessage.success(`删除客户: ${customers.value[selectedCustomer.value].name}`)\r\n      }).catch(() => {})\r\n    }\r\n    \r\n    // 添加联系人\r\n    const addContact = () => {\r\n      ElMessage.success('添加联系人')\r\n    }\r\n    \r\n    // 编辑联系人\r\n    const editContact = (contact) => {\r\n      ElMessage.success(`编辑联系人: ${contact.name}`)\r\n    }\r\n    \r\n    // 删除联系人\r\n    const deleteContact = (contact) => {\r\n      ElMessage.success(`删除联系人: ${contact.name}`)\r\n    }\r\n    \r\n    // 添加跟进记录\r\n    const addFollowup = () => {\r\n      ElMessage.success('添加跟进记录')\r\n    }\r\n    \r\n    return {\r\n      searchQuery,\r\n      customerType,\r\n      selectedCustomer,\r\n      activeTab,\r\n      customers,\r\n      filteredCustomers,\r\n      // 图标\r\n      Plus,\r\n      Search,\r\n      Edit,\r\n      Delete,\r\n      Phone,\r\n      // 方法\r\n      getFollowupType,\r\n      getFollowupColor,\r\n      createCustomer,\r\n      editCustomer,\r\n      deleteCustomer,\r\n      addContact,\r\n      editContact,\r\n      deleteContact,\r\n      addFollowup\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.customer-container {\r\n  padding: 20px;\r\n}\r\n\r\n.card-header-flex {\r\n  display: flex;\r\n  justify-content: space-between;\r\n  align-items: center;\r\n}\r\n\r\n.customer-list-card,\r\n.customer-detail-card {\r\