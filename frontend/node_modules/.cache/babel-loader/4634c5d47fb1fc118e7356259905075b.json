/router-view>\n      </div>\n    </div>\n\n    <!-- 语音助手悬浮按钮 -->\n    <div class=\"voice-assistant\" @click=\"toggleVoiceAssistant\">\n      <SimpleOffice3DAvatar @click=\"toggleVoiceAssistant\" />\n    </div>\n    \n    <!-- 语音助手对话框 -->\n    <el-dialog\n      v-model=\"voiceAssistantVisible\"\n      title=\"AI语音助手\"\n      width=\"400px\"\n      custom-class=\"voice-assistant-dialog\"\n      :show-close=\"true\"\n      :close-on-click-modal=\"false\"\n    >\n      <div class=\"assistant-chat-box\">\n        <div class=\"chat-message assistant\">\n          <div class=\"message-bubble\">您好，我是您的AI助手，有什么可以帮助您的吗？</div>\n        </div>\n        <div v-for=\"(message, index) in chatMessages\" :key=\"index\" \n             class=\"chat-message\" :class=\"message.type\">\n          <div class=\"message-bubble\">\n            {{ message.content }}\n            <div v-if=\"message.link\" class=\"doc-link\">\n              <a :href=\"message.link.url\" target=\"_blank\">{{ message.link.title }}</a>\n            </div>\n          </div>\n        </div>\n      </div>\n      <div class=\"chat-input-group\">\n        <el-input \n          v-model=\"userMessage\" \n          placeholder=\"输入您的问题...\" \n          @keyup.enter=\"sendMessage\"\n        ></el-input>\n        <el-button type=\"primary\" @click=\"sendMessage\">发送</el-button>\n      </div>\n    </el-dialog>\n  </div>\n</template>\n\n<script>\nimport { ref, computed, onMounted, onBeforeUnmount, watch } from 'vue'\nimport { useStore } from 'vuex'\nimport { useRoute } from 'vue-router'\nimport Sidebar from '@/components/layout/Sidebar.vue'\nimport Navbar from '@/components/layout/Navbar.vue'\nimport SimpleOffice3DAvatar from '@/components/SimpleOffice3DAvatar.vue'\n\nexport default {\n  name: 'Layout',\n  components: {\n    Sidebar,\n    Navbar,\n    SimpleOffice3DAvatar\n  },\n  setup() {\n    const store = useStore()\n    const route = useRoute()\n    \n    // 设备类型\n    const device = computed(() => store.getters.device)\n    \n    // 侧边栏状态\n    const sidebarOpened = computed(() => store.getters.sidebar.opened)\n    \n    // 动态计算主容器样式\n    const mainContainerStyle = computed(() => {\n      // 侧边栏展开宽度为160px，收起宽度为64px\n      const sidebarWidth = sidebarOpened.value ? '160px' : '64px'\n      return {\n        marginLeft: sidebarWidth,\n        width: `calc(100% - ${sidebarWidth})`\n      }\n    })\n    \n    // 语音助手相关\n    const voiceAssistantVisible = ref(false)\n    const userMessage = ref('')\n    const chatMessages = ref([])\n    \n    // 监视路由变化，处理离开智能文档页面的情况\n    watch(() => route.path, (newPath, oldPath) => {\n      // 如果我们离开了智能文档页面\n      if (oldPath === '/smartdoc' && newPath !== '/smartdoc') {\n        // 清理可能干扰导航的状态\n        setTimeout(() => {\n          // 移除可能的事件拦截器\n          document.querySelectorAll('.el-overlay, .el-popup-parent--hidden').forEach(el => {\n            if (el && el.parentNode) {\n              try {\n                el.parentNode.removeChild(el);\n              } catch (e) {\n                console.error('清理DOM元素失败:', e);\n              }\n            }\n          });\n          \n          // 恢复body样式\n          document.body.style.overflow = '';\n          document.body.classList.remove('el-popup-parent--hidden');\n          \n          // 确保导航菜单可点击\n          document.querySelectorAll('.el-menu-item, .el-submenu').forEach(el => {\n            // 移除可能添加的pointer-events: none\n            el.style.pointerEvents = 'auto';\n          });\n        }, 100);\n      }\n    });\n    \n    // 切换语音助手显示状态\n    const toggleVoiceAssistant = () => {\n      voiceAssistantVisible.value = !voiceAssistantVisible.value\n    }\n    \n    // 发送消息\n    const sendMessage = () => {\n      if (userMessage.value.trim() === '') return\n      \n      // 添加用户消息\n      chatMessages.value.push({\n        type: 'user',\n        content: userMessage.value\n      })\n      \n      // 模拟AI回复\n      setTimeout(() => {\n        // 这里可以替换为实际的AI接口调用\n        const aiResponses = [\n          '正在为您查询相关信息...',\n          '根据您的问题，我建议您查看以下文档：',\n          '这个问题我需要进一步了解，您能提供更多细节吗？',\n          '您好，我可以帮您创建一个新的工作任务。',\n          '已为您找到相关信息，请查看以下内容：'\n        ]\n        \n        // 随机选择一个回复\n        const randomResponse = aiResponses[Math.floor(Math.random() * aiResponses.length)]\n        \n        // 生成随机文档链接\n        const documentLinks = [\n          { title: '用户手册：如何使用任务管理', url: '#/document' },\n          { title: '最佳实践：提高工作效率指南', url: '#/knowledge' },\n          { title: '系统更新：最新功能介绍', url: '#/dashboard' }\n        ]\n        \n        // 添加AI回复\n        if (randomResponse.includes('文档') || randomResponse.includes('相关信息')) {\n          const randomLink = documentLinks[Math.floor(Math.random() * documentLinks.length)]\n          chatMessages.value.push({\n            type: 'assistant',\n            content: randomResponse,\n            link: randomLink\n          })\n        } else {\n          chatMessages.value.push({\n            type: 'assistant',\n            content: randomResponse\n          })\n        }\n      }, 1000)\n      \n      // 清空输入\n      userMessage.value = ''\n    }\n    \n    // 响应式布局 - 窗口尺寸变化监听\n    const handleResize = () => {\n      if (document && document.body) {\n        if (document.body.clientWidth < 992) {\n          store.dispatch('setDevice', 'mobile')\n          store.dispatch('toggleSidebar', false)\n        } else {\n          store.dispatch('setDevice', 'desktop')\n        }\n      }\n    }\n    \n    onMounted(() => {\n      handleResize()\n      window.addEventListener('resize', handleResize)\n    })\n    \n    onBeforeUnmount(() => {\n      window.removeEventListener('resize', handleResize)\n    })\n    \n    return {\n      device,\n      mainContainerStyle,\n      voiceAssistantVisible,\n      userMessage,\n      chatMessages,\n      toggleVoiceAssistant,\n      sendMessage,\n      SimpleOffice3DAvatar\n    }\n  }\n}\n</script>\n\n<style lang=\"scss\" scoped>\n.app-wrapper {\n  position: relative;\n  height: 100%;\n  width: 100%;\n  display: flex;\n  background-color: var(--bg-color);\n  color: var(--text-color);\n}\n\n.sidebar-container {\n  transition: width 0.28s;\n  height: 100%;\n  position: fixed;\n  top: 0;\n  bottom: 0;\n  left: 0;\n  z-index: 1001;\n}\n\n.main-container {\n  min-height: 100%;\n  transition: margin-left 0.28s;\n  position: relative;\n  padding-top: 60px; /* 为固定导航栏腾出空间 */\n  overflow: hidden; /* 改为hidden让子元素处理滚动 */\n  display: flex;\n  flex-direction: column;\n  background-color: var(--bg-color);\n  color: var(--text-color);\n}\n\n.app-main {\n  flex: 1;\n  width: 100%;\n  position: relative;\n  overflow: auto;\n  padding: 0px;\n  min-height: calc(100vh - 60px);\n  background-color: var(--bg-color);\n}\n\n/* 增强过渡动画效果 */\n.fade-transform-enter-active,\n.fade-transform-leave-active {\n  transition: all 0.3s;\n}\n\n.fade-transform-enter-from {\n  opacity: 0;\n  transform: translateX(30px);\n}\n\n.fade-transform-leave-to {\n  opacity: 0;\n  transform: translateX(-30px);\n}\n\n/* 备用过渡动画，确保动画效果一定生效 */\n.v-enter-active,\n.v-leave-active {\n  transition: opacity 0.3s ease;\n}\n\n.v-enter-from,\n.v-leave-to {\n  opacity: 0;\n}\n\n.app-wrapper.mobile .sidebar-container {\n  transition: transform .28s;\n  width: 180px !important;\n}\n\n.app-wrapper.mobile .main-container {\n  margin-left: 0 !important;\n  width: 100% !important;\n}\n\n.app-wrapper.mobile .sidebar-container.is-collapsed {\n  transform: translateX(-200px);\n}\n\n/* 语音助手样式 */\n.voice-assistant {\n  position: fixed;\n  bottom: 30px;\n  right: 30px;\n  z-index: 2000;\n  transition: all 0.3s;\n}\n\n/* 对话框样式 */\n.assistant-chat-box {\n  height: 300px;\n  overflow-y: auto;\n  padding: 15px;\n  background-color: var(--bg-color-secondary);\n  border-radius: 5px;\n}\n\n.chat-message {\n  margin-bottom: 15px;\n  display: flex;\n}\n\n.chat-message .message-bubble {\n  padding: 10px 15px;\n  border-radius: 15px;\n  max-width: 80%;\n  word-wrap: break-word;\n}\n\n.chat-message.user .message-bubble {\n  background-color: var(--primary-color);\n  color: white;\n  margin-left: auto;\n  border-bottom-right-radius: 5px;\n}\n\n.chat-message.assistant .message-bubble {\n  background-color: var(--bg-color-tertiary);\n  color: var(--text-color);\n  margin-right: auto;\n  border-bottom-left-radius: 5px;\n}\n\n.chat-message.assistant .message-bubble .doc-link {\n  display: block;\n  background-color: var(--bg-color);\n  padding: 8px;\n  margin-top: 8px;\n  border-radius: 5px;\n  border: 1px solid var(--border-color);\n}\n\n.chat-message.assistant .message-bubble .doc-link a {\n  text-decoration: none;\n  color: var(--primary-color);\n}\n\n.chat-input-group {\n  display: flex;\n  margin-top: 15px;\n}\n\n.chat-input-group .el-input {\n  margin-right: 10px;\n}\n\n/* Element Plus对话框样式覆盖 */\n:deep(.voice-assistant-dialog) {\n  background-color: var(--bg-color);\n  border-color: var(--border-color);\n  \n  .el-dialog__title {\n    color: var(--text-color);\n  }\n  \n  .el-dialog__body {\n    color: var(--text-color);\n    background-color: var(--bg-color);\n  }\n  \n  .el-dialog__header {\n    background-color: var(--bg-color);\n    border-bottom: 1px solid var(--border-color);\n  }\n  \n  .el-dialog__headerbtn .el-dialog__close {\n    color: var(--text-color);\n    \n    &:hover {\n      color: var(--primary-color);\n    }\n  }\n  \n  .el-dialog__footer {\n    background-color: var(--bg-color);\n    border-top: 1px solid var(--border-color);\n  }\n}\n</style> "],"mappings":";;EAWWA,KAAK,EAAC;AAAU;;EAyBhBA,KAAK,EAAC;AAAoB;;EAMtBA,KAAK,EAAC;AAAgB;;;EAEAA,KAAK,EAAC;;;;EAMhCA,KAAK,EAAC;AAAkB;;;;;;;;;uBAjDjCC,mBAAA,CA0DM;IA1DDD,KAAK,EAAAE,eAAA,EAAC,aAAa;MAAA,UAAqBC,MAAA,CAAAC,MAAM;IAAA;MACjDC,mBAAA,SAAY,EACZC,YAAA,CAAqCC,kBAAA;IAA5BP,KAAK,EAAC;EAAmB,IAElCK,mBAAA,YAAe,EACfG,mBAAA,CAcM;IAdDR,KAAK,EAAC,gBAAgB;IAAES,KAAK,EAAAC,eAAA,CAAEP,MAAA,CAAAQ,kBAAkB;MACpDN,mBAAA,WAAc,EACdC,YAAA,CAAUM,iBAAA,GAEVP,mBAAA,UAAa,EACbG,mBAAA,CAQM,OARNK,UAQM,GAPJP,YAAA,CAMcQ,sBAAA;sBALZ,CAIa;MALQC;IAAS,OAC9BT,YAA